@font-face { font-family: "Reenie Beanie"; src: url('ReenieBeanie.ttf'); } 

body{
  font-family:arial,sans-serif;
  font-size:100%;
 /* width: 80%;
  margin: 50px auto;   /* eliminare la formattazione del body perché le note andranno aggiunte una alla volta in una posizione fissa
                         e le posizionerà poi l'utente a piacere sullo schermo. */
  background:#666;
  color:#fff;
  overflow: scroll;
}

#new_note_button {
  width: 64px;
  height: 64px;
  overflow: hidden;
  text-indent: -9999px;
  background-image: url(images/note_3.png);
}

#trash {
  margin-top: 30px;
  width: 64px;
  height: 64px;
  overflow: hidden;
  text-indent: -9999px;
  background-image: url(images/trash_2.png);
}

#ui {
  width: 64px;
  position: absolute;
  top: 30px;
  left: 30px;
}

h2,p{
  font-size:100%;
  font-weight:normal;
}

ul,li{
  list-style:none;
}

ul{
  overflow:hidden;
  padding:3em;
}

ul li a{
  text-decoration:none;
  color:#000;
  background:#ffc;
  display:block;
  height:160px;
  width:160px;
  padding:1em;
  -moz-box-shadow:5px 5px 7px rgba(33,33,33,1);
  -webkit-box-shadow: 5px 5px 7px rgba(33,33,33,.7);
  box-shadow: 5px 5px 7px rgba(33,33,33,.7);
  -moz-transition:-moz-transform .15s linear;
  -o-transition:-o-transform .15s linear;
  -webkit-transition:-webkit-transform .15s linear;
}

ul li{
  margin:1em;
  float:left;
}

ul li h2{
  font-size:140%;
  font-weight:bold;
  padding-bottom:10px;
}

ul li p{
  font-family:"Reenie Beanie",arial,sans-serif;
  font-size:180%;
}

.note_content {
  clear:left;
}

.icon {
  widht: 16px;
  height: 16px;
  margin-top: 4px;
  padding-right: 22px;
  float:left;
}

.star{
  background: url(images/star.png) no-repeat 0 0;
}

.square{
  background: url(images/square.png) no-repeat 0 0;
}

.round{
  background: url(images/round.png) no-repeat 0 0;
}

.triangle{
  background: url(images/triangle.png) no-repeat 0 0;
}

ul li a{
  -webkit-transform: rotate(-6deg);
  -o-transform: rotate(-6deg);
  -moz-transform:rotate(-6deg);
}

ul li:nth-child(even) a{
  -o-transform:rotate(4deg);
  -webkit-transform:rotate(4deg);
  -moz-transform:rotate(4deg);
  position:relative;
  top:5px;
  background:#cfc;
}

ul li:nth-child(3n) a{
  -o-transform:rotate(-3deg);
  -webkit-transform:rotate(-3deg);
  -moz-transform:rotate(-3deg);
  position:relative;
  top:-5px;
  background:#ccf;
}

ul li:nth-child(5n) a{
  -o-transform:rotate(5deg);
  -webkit-transform:rotate(5deg);
  -moz-transform:rotate(5deg);
  position:relative;
  top:-10px;
}

ul li a:hover,ul li a:focus{
  box-shadow:10px 10px 7px rgba(0,0,0,.7);
  -moz-box-shadow:10px 10px 7px rgba(0,0,0,.7);
  -webkit-box-shadow: 10px 10px 7px rgba(0,0,0,.7);
  -webkit-transform: scale(1.25);
  -moz-transform: scale(1.25);
  -o-transform: scale(1.25);
  position:relative;
  z-index:5;
}

ol{text-align:center;}
ol li{display:inline;padding-right:1em;}
ol li a{color:#fff;}
